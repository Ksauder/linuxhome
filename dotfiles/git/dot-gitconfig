[alias]
    co = checkout
	ci = commit
	di = diff
	st = status
	br = branch -v -a
	clonewmods = clone --recurse-submodules -j8
	subup = submodule update --init --recursive
    staash = stash --all
    blaame = blame -w -C -C -C -L
    wdiff = diff --word-diff
    rdiff = diff --submodule=diff
    discard = !git checkout -- . && git submodule foreach git checkout -- .
[fetch]
    writeCommitGraph = true
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	autocrlf = input
	attributesfile = ~/.gitattributes
	excludesfile = ~/.gitignore
	pager = delta 2> /dev/null || less
	editor = nvim
[apply]
	whitespace = nowarn
[format]
	pretty = %C(auto)%h%Creset -%C(auto)%d%Creset %s %C(blue)<%an> %Cgreen(%cr)%Creset
[push]
	default = current
[pager]
	# Disable paging for `git branch`.
	branch = false
[delta]
	syntax-theme = Solarized (dark)
	line-numbers = true
	side-by-side = true
[interactive]
	diffFilter = delta --color-only
[merge]
    conflictstyle = diff3
[commit]
    verbose = true
[diff]
    algorithm = histogram
[rerere]
    enabled = true

[user]
	email = ksauder.dev@gmail.com
	name = Ksauder
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
